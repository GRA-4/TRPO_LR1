<Window x:Class="TRPO_LR1.CountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO_LR1"
        mc:Ignorable="d"
        Title="Пополнить карту" Height="160" Width="180" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Left">
            <TextBlock Text="Введите сумму"/>
            <TextBox x:Name="CountTextBox" Width="120"/>
            <Button x:Name="AcceptButton" Click="AcceptButton_Click" Content="OK" Width="40" Margin="0,20" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
